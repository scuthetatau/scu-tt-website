service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all users under a 'users' collection
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read/write access to all users under an 'authorizedEmails' collection
    match /authorizedEmails/{emailId} {
      allow read, write: if request.auth != null;
    }
  }
}